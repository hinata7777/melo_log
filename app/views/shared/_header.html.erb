<header class="bg-gray-900 shadow">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">
      <!-- ロゴ（左寄せ） -->
      <div class="flex-shrink-0">
        <%= link_to root_path, class: "flex items-center space-x-2" do %>
          <%= image_tag 'logo.png', alt: 'MeloLog', class: "h-28 w-28" %>
        <% end %>
      </div>

      <!-- 右側メニュー（投稿一覧・新規投稿・プロフィール） -->
      <div class="hidden md:flex items-center space-x-6">
        <!-- 投稿一覧 & 新規投稿 -->
        <%= link_to "投稿一覧", "#", class: "text-gray-300 hover:text-purple-400" %>
        <%= link_to "新規投稿", "#", class: "text-gray-300 hover:text-purple-400" %>

        <!-- プロフィールドロップダウン -->
        <div class="relative">
          <button id="user-menu" class="flex items-center focus:outline-none">
            <%= image_tag 'sample.jpg', class: "h-10 w-10 rounded-full border border-gray-600" %>
          </button>
          <div class="hidden absolute right-0 mt-2 w-48 bg-gray-800 border border-gray-700 rounded shadow-lg" id="dropdown-menu">
            <div class="px-4 py-2 text-sm text-gray-400 border-b border-gray-700">らんてっく たろう</div>
            <%= link_to "プロフィール", "#", class: "block px-4 py-2 text-gray-300 hover:bg-gray-700 hover:text-white" %>
            <%= link_to "ログアウト", "#", class: "block px-4 py-2 text-gray-300 hover:bg-gray-700 hover:text-white" %>
          </div>
        </div>
      </div>

      <!-- スマホ用ハンバーガーメニュー -->
      <div class="md:hidden">
        <button id="hamburger" class="focus:outline-none">
          <svg class="w-6 h-6 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>

    <!-- スマホ用ドロワーメニュー -->
    <div id="mobile-menu" class="hidden md:hidden mt-2 space-y-2 bg-gray-800 rounded-lg p-4">
      <%= link_to "投稿一覧", "#", class: "block text-gray-300 hover:text-purple-400" %>
      <%= link_to "新規投稿", "#", class: "block text-gray-300 hover:text-purple-400" %>
      <%= link_to "プロフィール", "#", class: "block text-gray-300 hover:text-purple-400" %>
      <%= link_to "ログアウト", "#", class: "block text-gray-300 hover:text-purple-400" %>
    </div>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // プロフィールドロップダウン（PC）
    const userMenuBtn = document.getElementById('user-menu');
    const dropdownMenu = document.getElementById('dropdown-menu');
    if (userMenuBtn) {
      userMenuBtn.addEventListener('click', () => {
        dropdownMenu.classList.toggle('hidden');
      });
    }

    // ハンバーガーメニュー（スマホ）
    const hamburgerBtn = document.getElementById('hamburger');
    const mobileMenu = document.getElementById('mobile-menu');
    if (hamburgerBtn) {
      hamburgerBtn.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>