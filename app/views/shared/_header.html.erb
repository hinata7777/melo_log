<header class="bg-white shadow">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">
      <!-- ロゴ（左寄せ） -->
      <div class="flex-shrink-0">
        <%= link_to root_path, class: "flex items-center space-x-2" do %>
          <%= image_tag 'logo.png', alt: 'MeloLog', class: "h-20 w-20" %>
        <% end %>
      </div>

      <!-- 右側メニュー（投稿一覧・新規投稿・プロフィール） -->
      <div class="hidden md:flex items-center space-x-6">
        <!-- 投稿一覧 & 新規投稿 -->
        <%= link_to "投稿一覧", "#", class: "text-gray-700 hover:text-indigo-600" %>
        <%= link_to "新規投稿", "#", class: "text-gray-700 hover:text-indigo-600" %>

        <!-- プロフィールドロップダウン -->
        <div class="relative">
          <button id="user-menu" class="flex items-center focus:outline-none">
            <%= image_tag 'sample.jpg', class: "h-10 w-10 rounded-full border" %>
          </button>
          <div class="hidden absolute right-0 mt-2 w-48 bg-white border rounded shadow-lg" id="dropdown-menu">
            <div class="px-4 py-2 text-sm text-gray-600 border-b">らんてっく たろう</div>
            <%= link_to "プロフィール", "#", class: "block px-4 py-2 text-gray-700 hover:bg-gray-100" %>
            <%= link_to "ログアウト", "#", class: "block px-4 py-2 text-gray-700 hover:bg-gray-100" %>
          </div>
        </div>
      </div>

      <!-- スマホ用ハンバーガーメニュー -->
      <div class="md:hidden">
        <button id="hamburger" class="focus:outline-none">
          <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>

    <!-- スマホ用ドロワーメニュー -->
    <div id="mobile-menu" class="hidden md:hidden mt-2 space-y-2 bg-gray-50 rounded-lg p-4">
      <%= link_to "投稿一覧", "#", class: "block text-gray-700 hover:text-indigo-600" %>
      <%= link_to "新規投稿", "#", class: "block text-gray-700 hover:text-indigo-600" %>
      <%= link_to "プロフィール", "#", class: "block text-gray-700 hover:text-indigo-600" %>
      <%= link_to "ログアウト", "#", class: "block text-gray-700 hover:text-indigo-600" %>
    </div>
  </nav>
</header>
