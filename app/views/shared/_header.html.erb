<header class="bg-gray-900 shadow" data-controller="header-menu">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">
      <!-- ロゴ（左寄せ） -->
      <div class="flex-shrink-0">
        <%= link_to root_path, class: "flex items-center space-x-2" do %>
          <%= image_tag 'logo.png', alt: 'MeloLog', class: "h-28 w-28" %>
        <% end %>
      </div>

      <!-- 右側メニュー -->
      <div class="hidden md:flex items-center space-x-6">
        <%= link_to "新規投稿", new_post_path, class: "text-gray-300 hover:text-purple-400" %>

        <% if logged_in? %>
          <div class="relative">
            <button
              data-header-menu-target="avatarBtn"
              data-action="click->header-menu#toggleDropdown"
              class="flex items-center focus:outline-none">
              <%= image_tag avatar_variant_for(current_user, size: 40),
                    class: "h-10 w-10 rounded-full border border-gray-600 object-cover cursor-pointer",
                    width: 40, height: 40, loading: "lazy", decoding: "async", alt: "" %>
            </button>

            <div
              data-header-menu-target="dropdown"
              class="hidden absolute right-0 mt-2 w-48 bg-gray-800 border border-gray-700 rounded shadow-lg z-50">
              <div class="px-4 py-2 text-sm text-gray-400 border-b border-gray-700">
                <%= current_user.try(:nickname) || "マイページ" %>
              </div>
              <%= link_to "マイページ", user_path(current_user), class: "block px-4 py-2 text-gray-300 hover:bg-gray-700 hover:text-white" %>
              <%= link_to "ログアウト", logout_path, data: { turbo_method: :delete }, class: "block px-4 py-2 text-gray-300 hover:bg-gray-700 hover:text-white" %>
            </div>
          </div>
        <% else %>
          <%= link_to "ログイン", login_path, class: "text-gray-300 hover:text-purple-400" %>
        <% end %>
      </div>

      <!-- スマホ用ハンバーガー -->
      <div class="md:hidden">
        <button
          data-header-menu-target="hamburgerBtn"
          data-action="click->header-menu#toggleMobile"
          class="focus:outline-none">
          <svg class="w-6 h-6 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>

    <!-- スマホ用ドロワー -->
    <div
      data-header-menu-target="mobileMenu"
      class="hidden md:hidden mt-2 space-y-2 bg-gray-800 rounded-lg p-4 z-40">
      <%= link_to "新規投稿", new_post_path, class: "block text-gray-300 hover:text-purple-400" %>
      <% if logged_in? %>
        <%= link_to "マイページ", user_path(current_user), class: "block text-gray-300 hover:text-purple-400" %>
        <%= link_to "ログアウト", logout_path, data: { turbo_method: :delete }, class: "block text-gray-300 hover:text-purple-400" %>
      <% else %>
        <%= link_to "ログイン", login_path, class: "block text-gray-300 hover:text-purple-400" %>
      <% end %>
    </div>
  </nav>
</header>