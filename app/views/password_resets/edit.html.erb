<div class="min-h-[60vh] flex items-center justify-center p-6">
  <div class="w-full max-w-md bg-gray-800 text-white rounded-2xl p-6 shadow">
    <h1 class="text-2xl font-bold mb-4">新しいパスワードを設定</h1>

    <%= form_with model: @user, url: password_reset_path(@token), method: :put, local: true do |f| %>
      <label class="block text-sm mb-1">新しいパスワード（8文字以上）</label>
      <%= f.password_field :password, required: true, minlength: 8,
            class: "w-full rounded-lg bg-gray-900 border border-gray-700 px-3 py-2 mb-4" %>

      <label class="block text-sm mb-1">パスワード（確認）</label>
      <%= f.password_field :password_confirmation, required: true, minlength: 8,
            class: "w-full rounded-lg bg-gray-900 border border-gray-700 px-3 py-2 mb-6" %>

      <button class="w-full bg-purple-600 hover:bg-purple-500 text-white font-semibold py-2 rounded-lg">
        変更する
      </button>
    <% end %>
  </div>
</div>